#!/usr/bin/env bash
# Define the path to the manage_my_process script
MANAGE_SCRIPT="/path/to/manage_my_process.sh"

# Define the PID file path
PID_FILE="/var/run/my_process.pid"

# Function to start the manage_my_process script
start_process() {
  if [ -e "$PID_FILE" ]; then
    echo "manage_my_process is already running. Use 'restart' to restart it."
  else
    "$MANAGE_SCRIPT" &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
  fi
}

# Function to stop the manage_my_process script
stop_process() {
  if [ -e "$PID_FILE" ]; then
    PID=$(cat "$PID_FILE")
    kill "$PID"
    rm -f "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process is not running."
  fi
}

# Check for the argument passed
case "$1" in
  "start")
    start_process
    ;;
  "stop")
    stop_process
    ;;
  "restart")
    stop_process
    start_process
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
